            info: routes[i].meta.info,
            path: routes[i].path,
            name: routes[i].name,
          };
          this.$store.commit("pushtags", val);
        }
      }
    },
    triggerSidebarOpened() {
      this.isCollapse = !this.isCollapse;
    },

