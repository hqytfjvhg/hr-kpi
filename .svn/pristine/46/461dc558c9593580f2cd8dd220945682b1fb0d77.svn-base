import { login, uuid } from "@/api/login/index";

export default {
  data() {
    return {
      username: "",
      password: "",
      // isLoading: false,
    };
  },
  methods: {
    loginSubmit() {
      if (this.username == "" || this.password == "") {
        ElMessage.error("账号/密码不能为空");
      } else {
        const LoginForm = {
          username: this.username,
          password: this.password,
        };
        // this.isLoading = true;
        login(LoginForm);
      }
    },
    getUuid() {
      uuid();
    },
    components: { ElButton },
  },
};
